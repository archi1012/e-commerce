# Backend Environment Variables for Railway
# Add these in Railway Dashboard > Variables

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/winger_ecommerce?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-long-jwt-secret-key-minimum-32-characters-long-for-security
JWT_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your-super-long-session-secret-key-minimum-32-characters-long

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_live_your_production_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret_key

# Google OAuth Configuration (if using)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_CALLBACK_URL=https://your-backend-domain.railway.app/api/auth/google/callback

# Email Configuration (if using)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password